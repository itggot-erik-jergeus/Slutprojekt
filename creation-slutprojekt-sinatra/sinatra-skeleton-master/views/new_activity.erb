<form action="create_activity" method="post">
  <div class="form_row">
    <label class="activity_labels">Type: </label>
    <select name="type">
      <option value="Homework" selected>Homework</option>
      <option value="Event">Other</option>
    </select></div>
  <div class="requirements">*</div>
  <div class="form_row">
    <label class="activity_labels">Title: </label>
    <input type="text" name="title"></div>
  <div class="requirements">*</div>
  <div class="form_row">
    <label class="activity_labels">Subject: </label>
    <select name="subject">
      <option value="nil" selected>None</option>
      <% for subject in @subjects %>
          <option value="<%= subject.name%>"><%= subject.name%></option>
      <% end %>
    </select></div>
  <div class="form_row">
    <label class="activity_labels">Due Date: </label>
    <input type="date" name="due_date" placeholder="yyyy-mm-dd"></div>
  <div class="requirements">*</div>
  <div class="form_row">
    <label class="activity_labels">Planning: </label>
    <select name="planning">
      <option value="nil" selected>None</option>
      <% for plan in @plans %>
        <option value="<%= plan.name%>"><%= plan.name%></option>
      <% end %>
    </select></div>
  <div class="form_row">
    <label class="activity_labels">Hidden Activity: </label>
    <input type="checkbox" name="hidden_activity" value="hidden"></div>
  <button type="submit">Create</button>
</form>