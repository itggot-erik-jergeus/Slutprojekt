<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>SuperAwesomeWebsite</title>
  <link type="text/css" rel="stylesheet" href="/css/layout.css">
</head>
<body>
  <% if @user || @parent %>
    <nav class="tabobjects">
      <ul class="navlist">
        <li class="objects"><a href="/activities/simple"><button class="btn-white">Upcoming Events</button></a></li>
        <% if @user %><li class="objects"><a href="/new_activity"><button class="btn-white">Add New Activity</button></a></li>
        <% elsif @parent %>
          <li class="objects">
            <div class="dropdown-objects">>
            <button class="btn-drop">Add New Activities</button>
            <div class="dropdown-content">
              <% if @parent.users != []%>
                <% for child in @parent.users %>
                  <a href="/new_activity/<%= child.id %>"><%= child.username %></a>
                <% end %>
              <% else %>
                <a href="/management">No Children</a>
              <% end %>
            </div>
            </div
          </li>
        <% end %>
        <li class="objects"><a href="/management"><button class="btn-white">Manage <%= if @user then "Parents" else "Children" end%></button></button></a></li>
        <li class="objects"><a href="/profile"><button class="btn-white">My Profile</button></a></li>
        <li class="objects"><form action="/log_out" method="post"><button type="submit" class="btn-gray">Log Out</button></form></li>
      </ul>
    </nav>
    <% if @event %>
      <form action="/activities/simple" method="get">
        <div class="event_form"><input type="submit" value="Simple Form"></div>
      </form>
      <form action="/activities/calendar" method="get">
        <div class="event_form"><input type="submit" value="Calendar Form"></div>
      </form>
      <div class="event_date"><%= Time.now %></div>
    <% end%>
  <% else %>
    <nav class="tabobjects">
      <div class="tab">
        <form action="/login" method="get" class="user_btn"><button class="btn-green" type="submit">Log In</button></form>
        <form action="/sign_up" method="get" class="user_btn"><button class="btn-green" type="submit">Sign Up</button></form>
      </div>
    </nav>
  <% end %>
<%= yield %>
</body>
</html>